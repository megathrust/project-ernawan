<div class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="container mx-auto px-4">
        <div id="register" class="max-w-md mx-auto bg-white p-8 rounded-xl shadow-md">
            <h2 class="text-2xl font-bold mb-6 text-center">Registrasi</h2>
            <form action="/auth/register" method="post">
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="nama">
                        Nama Lengkap
                    </label>
                    <div class="relative">
                        <input type="text" name="nama_user" id="nama" class="pl-10 w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Masukkan nama kamu">
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="email-register">
                        Email
                    </label>
                    <div class="relative">
                        <input type="email" name="email_user" id="email-register" class="pl-10 w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Masukkan email">
                    </div>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="password-register">
                        Password
                    </label>
                    <div class="relative">
                        <input type="password" name="password_user" id="password-register" class="pl-10 w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Buat password">
                    </div>
                </div>
                <button type="submit" class="w-full bg-green-500 text-white py-2 rounded-md hover:bg-green-600 transition duration-300">
                    Daftar
                </button>
                <p class="text-center mt-4 text-sm text-gray-600">
                    Sudah punya akun? 
                    <a href="/auth/login" class="text-blue-600 hover:underline">Login</a>
                </p>
            </form>
        </div>
    </div>
</div>