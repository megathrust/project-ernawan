<div class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="container mx-auto px-4">
        <div id="reset" class="max-w-md mx-auto bg-white p-8 rounded-xl shadow-md">
            <h2 class="text-2xl font-bold mb-6 text-center">Reset Password</h2>
            <form action="/auth/forgot-password" method="post">
                <div class="mb-6 text-center text-gray-600">
                    Masukkan email Anda untuk mendapatkan link reset password
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="email-reset">
                        Email
                    </label>
                    <div class="relative">
                        <input type="email" name="email_user" id="email-reset" class="pl-10 w-full px-3 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Masukkan email terdaftar">
                    </div>
                </div>
                <button type="submit" class="w-full bg-purple-500 text-white py-2 rounded-md hover:bg-purple-600 transition duration-300">
                    Kirim Link Reset
                </button>
                <p class="text-center mt-4 text-sm text-gray-600">
                    Kembali ke 
                    <a href="/auth/login" class="text-blue-600 hover:underline">Login</a>
                </p>
            </form>
        </div>
    </div>
</div>